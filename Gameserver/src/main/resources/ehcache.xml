<?xml version="1.0" encoding="UTF-8"?>

<config xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
		xmlns='http://www.ehcache.org/v3'
		xsi:schemaLocation="
        http://www.ehcache.org/v3 http://www.ehcache.org/schema/ehcache-core-3.6.xsd">

	<persistence directory="java.io.tmpdir" />

	<cache-template name="baseCache" >
		<key-type>java.lang.String</key-type>
		<expiry>
			<tti>1800</tti>
		</expiry>
		<heap>5000</heap>
	</cache-template>

	<!-- HtmCache -->
	<cache alias="org.l2j.gameserver.data.htm.HtmCache.KOREAN" uses-template="baseCache"/>
	<cache alias="org.l2j.gameserver.data.htm.HtmCache.ENGLISH" uses-template="baseCache"/>
	<cache alias="org.l2j.gameserver.data.htm.HtmCache.CHINESE" uses-template="baseCache"/>
	<cache alias="org.l2j.gameserver.data.htm.HtmCache.THAI" uses-template="baseCache"/>
	<cache alias="org.l2j.gameserver.data.htm.HtmCache.RUSSIAN" uses-template="baseCache"/>
	<cache alias="org.l2j.gameserver.data.htm.HtmCache.ENGLISH_EU" uses-template="baseCache"/>
	<cache alias="org.l2j.gameserver.data.htm.HtmCache.PORTUGUESE" uses-template="baseCache"/>
	<cache alias="org.l2j.gameserver.data.htm.HtmCache.SPANISH" uses-template="baseCache"/>
	<cache alias="org.l2j.gameserver.data.htm.HtmCache.ARABIC" uses-template="baseCache"/>
	<cache alias="org.l2j.gameserver.data.htm.HtmCache.GREEK" uses-template="baseCache"/>
	<cache alias="org.l2j.gameserver.data.htm.HtmCache.GEORGIAN" uses-template="baseCache"/>
	<cache alias="org.l2j.gameserver.data.htm.HtmCache.HUNGARIAN" uses-template="baseCache"/>
	<cache alias="org.l2j.gameserver.data.htm.HtmCache.FINNISH" uses-template="baseCache"/>
	<cache alias="org.l2j.gameserver.data.htm.HtmCache.UKRAINIAN" uses-template="baseCache"/>
	<cache alias="org.l2j.gameserver.data.htm.HtmCache.VIETNAMESE"  uses-template="baseCache"/>

	<!-- ItemInfoCache -->
	<cache alias="org.l2j.gameserver.cache.ItemInfoCache" uses-template="baseCache">
		<heap>10000</heap>
	</cache>

	<cache alias="org.l2j.gameserver.model.items.ItemInstance" uses-template="baseCache">
		<heap>200000</heap>
	</cache>

	<cache alias="org.l2j.gameserver.model.mail.Mail" uses-template="baseCache"/>

</config>